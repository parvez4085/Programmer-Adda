@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>NewUserMgmt</title>
    <link href="~/Content/css/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/css/hover-min.css" rel="stylesheet" />
    <script src="~/Content/js/jquery.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="row">
        <div class="col-sm-12" style=" margin:10px; font-size:15px;">
          <a href="../Admin/Index" style="color:red; text-decoration:none; font-size:22px;"><-- Back to Admin Dashboard</a><br />
              
        <table class="table">
    <tr style="font-size:22px;background:#ffd800;">
        <th>Name</th>
        <th>Lastname</th>
        <th>mobile Number</th>
        <th>CurrentAddress</th>
         
         <th>Profession</th>
         <th>Email Id</th>
         <th>Picture</th>
         <th>Registration Date</th>
         <th>Delete</th>
    </tr>
    @using ProgrammerAdd.Models;
    @{
        ConnectionManager cm = new ConnectionManager();
        string command = "select * from TBL_Registration";
        System.Data.DataTable dt = cm.GetBulksRecord(command);
        if(dt.Rows.Count>0)
        {
            for(int i=0;i<dt.Rows.Count;i++)
            {
        <tr>
        <td>@dt.Rows[i][0].ToString()</td>
            <td>@dt.Rows[i][1].ToString()</td>
            <td>@dt.Rows[i][2].ToString()</td>
            <td>@dt.Rows[i][3].ToString()</td>
            <td>@dt.Rows[i][4].ToString()</td>
            <td>@dt.Rows[i][5].ToString()</td>
            <td><img src="../Content/Profile/@dt.Rows[i][7].ToString()" style="height:50px;width:50px;border:2px solid red; border-radius:50%;"/>"</td>
            <td>@dt.Rows[i][8].ToString()</td>
        <td><a href="/Admin/delete?dt=@dt.Rows[i][5].ToString()">Click</a></td>
      
       </tr>
            }
        }
    }
   
    </table>
   </div>
</div>

</body>
</html>
