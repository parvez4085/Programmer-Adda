@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/AdminZoneMasterLayout.cshtml";
}

<div class="row">
    <div class="col-sm-12" style="margin-top:50px; font-family:'Times New Roman';font-size:20px;">
        
    <div class="col-sm-3"></div>
        
        <form action="../Admin/ChangePassword" method="post">

    <div class="col-sm-6">
        <h3>Change Password for Admin</h3><br />
        Old Password:
        <input type="password" class="form-control" name="txtold" placeholder="Enter old password" /><br />
        New Password:
        <input type="password" class="form-control" name="txtnewpass" placeholder="Enter New password" /><br />
        Confirm Password:
        <input type="password" class="form-control" name="txtcpass" placeholder="Enter confirm password" /><br />
         <br />
        <div class="col-sm-1" style="margin-left:35%;">
        <input type="submit" value="Save Change" class="btn btn-success"/>
            </div>
    </div>
            
        </form>
    <div class="col-sm-3"></div>
 </div>

</div>
